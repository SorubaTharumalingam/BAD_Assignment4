{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "MongoDBBson",
        "Args": {
          "databaseUrl": "mongodb://localhost:27017/BakeryLoggingDatabase",
          "collectionName": "Logs"
        }
      }
    ]
  },
  "MongoDB": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "BakeryLoggingDatabase"
  },
  "JWT": {
    "Issuer": "Bakery",
    "Audience":"Bakery",
    "SigningKey": "MyVeryOwnVeryLongSignInKeyThatNoOneCanGuess1234"
  },
  "AllowedHosts": "*"
}

